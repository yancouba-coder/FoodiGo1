<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/fond_menu"
    tools:context=".GalleryFoodiesActivity">

    <!-- En tête  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_weight="2"
            android:orientation="vertical">
            <ImageView
                android:layout_width="200dp"
                android:id="@+id/home"
                android:onClick="onClick"
                android:layout_height="70dp"
                app:srcCompat="@drawable/logov2" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:fontFamily="@font/style5"
                android:gravity="center"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/score_initial"
                android:textColor="@color/secondary"
                android:textSize="18sp"
                />


        </LinearLayout>

        <!-- Menu  -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:gravity="end" >
            <ImageView
                android:id="@+id/menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:onClick="onClick"
                app:srcCompat="@drawable/menu" />
        </LinearLayout>




    </LinearLayout>

    <!-- Titre  -->

    <!-- Grille  -->
    <LinearLayout
        android:id="@+id/foodies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="#C4F4DE"
        android:gravity="center"
        android:onClick="onClick"
        android:orientation="horizontal"
        android:paddingHorizontal="5dp"
        android:paddingVertical="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/style4"
            android:text="Foodies"
            android:textColor="@color/style4"

            android:textSize="@dimen/style4" />


    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="20dp"
        android:stretchColumns="0,1">

        <TableRow android:layout_width="fill_parent">

            <!--Ananas-->
            <FrameLayout
                android:id="@+id/fragment_container_view1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_of_gallery"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|bottom"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/style6"
                                android:text="@string/ananas"
                                android:textColor="@color/style6"
                                android:textSize="@dimen/style6" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/style7"
                                android:text='@string/ananasPoints'
                                android:textColor="@color/style7"
                                android:textSize="@dimen/style7" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/ananasPicture"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="78dp"
                            android:onClick="onClick"
                            android:src="@drawable/img_ico_black" />
                    </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="bottom">

                    <ImageView
                        android:id="@+id/ananasImage"
                        android:layout_width="100dp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ananas_black" />
                    <ImageView
                        android:id="@+id/ananasCheck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/check" />
                </LinearLayout>

                </LinearLayout>

            </FrameLayout>

            <!-- Avocat -->
            <FrameLayout
                android:id="@+id/fragment_container_view2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/shape_of_gallery"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|bottom"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/style6"
                                android:text="@string/avocat"
                                android:textColor="@color/style6"
                                android:textSize="@dimen/style6" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/style7"
                                android:text="@string/avocatPoints"
                                android:textColor="@color/style7"
                                android:textSize="@dimen/style7" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/avocatPicture"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="80dp"
                            android:onClick="onClick"
                            android:src="@drawable/img_ico_black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="bottom">

                        <ImageView
                            android:id="@+id/avocatImage"
                            android:layout_width="100dp"
                            android:layout_marginLeft="20dp"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/avocat_black" />
                        <ImageView
                            android:id="@+id/avocatCheck"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/check" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

        </TableRow>

        <TableRow android:layout_width="fill_parent">

            <!-- Banane -->
            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_of_gallery"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|bottom"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/style6"
                                android:text="@string/banane"
                                android:textColor="@color/style6"
                                android:textSize="@dimen/style6" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/style7"
                                android:text="@string/bananePoints"
                                android:textColor="@color/style7"
                                android:textSize="@dimen/style7" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/bananePicture"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="77dp"
                            android:onClick="onClick"

                            android:src="@drawable/img_ico_black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="bottom">

                        <ImageView
                            android:id="@+id/bananeImage"
                            android:layout_width="100dp"
                            android:layout_marginLeft="20dp"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/banane_black" />
                        <ImageView
                            android:id="@+id/bananeCheck"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/check" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <!-- Pastèque -->
            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_of_gallery"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|bottom"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/style6"
                                android:text="@string/pasteque"
                                android:textColor="@color/style6"
                                android:textSize="@dimen/style6" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/style7"
                                android:text="@string/pastequePoints"
                                android:textColor="@color/style7"
                                android:textSize="@dimen/style7" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/pastequePicture"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="68dp"
                            android:onClick="onClick"
                            android:src="@drawable/img_ico_black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="bottom">

                        <ImageView
                            android:id="@+id/pastequeImage"
                            android:layout_width="100dp"
                            android:layout_marginLeft="20dp"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/pasteque_black" />
                        <ImageView
                            android:id="@+id/pastequeCheck"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/check" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>


        </TableRow>

        <TableRow android:layout_width="fill_parent">

            <!-- Mangue -->
            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_of_gallery"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|bottom"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/style6"
                                android:text="@string/mangue"
                                android:textColor="@color/style6"
                                android:textSize="@dimen/style6" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/style7"
                                android:text="@string/manguePoints"
                                android:textColor="@color/style7"
                                android:textSize="@dimen/style7" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/manguePicture"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="75dp"
                            android:onClick="onClick"
                            android:src="@drawable/img_ico_black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="bottom">

                        <ImageView
                            android:id="@+id/mangueImage"
                            android:layout_width="100dp"
                            android:layout_marginLeft="20dp"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/mangue_black" />
                        <ImageView
                            android:id="@+id/mangueCheck"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/check" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>


            <!-- Pommes -->
            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_of_gallery"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|bottom"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/style6"
                                android:text="@string/pommes"
                                android:textColor="@color/style6"
                                android:textSize="@dimen/style6" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/style7"
                                android:text="@string/pommesPoints"
                                android:textColor="@color/style7"
                                android:textSize="@dimen/style7" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/pommesPicture"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="71dp"
                            android:onClick="onClick"
                            android:src="@drawable/img_ico_black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="bottom">

                        <ImageView
                            android:id="@+id/pommesImage"
                            android:layout_width="100dp"
                            android:layout_marginLeft="20dp"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/pommes_black" />
                        <ImageView
                            android:id="@+id/pommesCheck"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/check" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>


        </TableRow>


    </TableLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="80dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/style6"
        android:fontFamily="@font/style6"
        android:textSize="@dimen/style6"
        android:gravity="center"
        android:text="@string/messageFoodieGallery" />
    <Button
        android:id="@+id/play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="100dp"
        android:onClick="onClick"

        android:padding="10dp"

        android:text="@string/play_message"

        android:textColor="@color/style1"
        android:fontFamily="@font/style1"
        android:textSize="@dimen/style1"

        app:cornerRadius="@dimen/cornerRadius"
        app:strokeColor="@color/primary"
        app:strokeWidth="@dimen/stroke" />


</LinearLayout>