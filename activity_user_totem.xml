<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/fond"
    tools:context=".UserTotemActivity">

    <!-- En tête  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_weight="2"
            android:orientation="vertical">
            <ImageView
                android:layout_width="200dp"
                android:id="@+id/home"
                android:onClick="onClick"
                android:layout_height="70dp"
                app:srcCompat="@drawable/logov2" />

            <TextView
                android:id="@+id/points"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:gravity="center"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/style5"
                android:textColor="@color/style5"
                android:textSize="@dimen/style5"
                android:text="@string/score_initial"
                />


        </LinearLayout>

        <!-- Menu  -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:gravity="end" >
            <ImageView
                android:id="@+id/menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:onClick="onClick"
                app:srcCompat="@drawable/menu" />
        </LinearLayout>




    </LinearLayout>

    <!-- Titre  -->

    <!-- Grille  -->
    <LinearLayout
        android:id="@+id/foodies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="#C4F4DE"
        android:gravity="center"
        android:onClick="onClick"
        android:orientation="horizontal"
        android:paddingHorizontal="5dp"
        android:paddingVertical="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/style4"
            android:text="@string/totemTo"
            android:textColor="@color/style4"
            android:textSize="@dimen/style4" />


    </LinearLayout>




    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="20dp"
        android:stretchColumns="0,1">

        <TableRow android:layout_width="fill_parent">

            <!--Giraffe-->
            <FrameLayout
                android:id="@+id/fragment_container_view1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_of_gallery"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|bottom"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/style6"
                                android:text="@string/buldog"
                                android:textColor="@color/style6"
                                android:textSize="@dimen/style6" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="bottom">

                        <ImageView
                            android:id="@+id/buldogImage"
                            android:layout_width="100dp"
                            android:layout_marginLeft="20dp"
                            android:onClick="onClick"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/bulldog_1" />

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

            <!-- Avocat -->
            <FrameLayout
                android:id="@+id/fragment_container_view2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/shape_of_gallery"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|bottom"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/style6"
                                android:text="@string/elephant"
                                android:textColor="@color/style6"
                                android:textSize="@dimen/style6" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="bottom">

                        <ImageView
                            android:id="@+id/elephantImage"
                            android:layout_width="100dp"
                            android:layout_marginLeft="20dp"
                            android:onClick="onClick"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/elefant_1" />

                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

        </TableRow>

        <TableRow android:layout_width="fill_parent">

            <!-- Banane -->
            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_of_gallery"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|bottom"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/style6"
                                android:text="@string/giraffe"
                                android:textColor="@color/style6"
                                android:textSize="@dimen/style6" />


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="bottom">

                        <ImageView
                            android:id="@+id/Giraffe"
                            android:layout_width="100dp"
                            android:layout_marginLeft="20dp"
                            android:onClick="onClick"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/giraffe_1" />

                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <!-- Pastèque -->
            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_of_gallery"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|bottom"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/style6"
                                android:text="@string/cheval"
                                android:textColor="@color/style6"
                                android:textSize="@dimen/style6" />


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="bottom">

                        <ImageView
                            android:id="@+id/horseImage"
                            android:layout_width="100dp"
                            android:layout_marginLeft="20dp"
                            android:onClick="onClick"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/horse_1" />

                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>


        </TableRow>

        <TableRow android:layout_width="fill_parent">

            <!-- Mangue -->
            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_of_gallery"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|bottom"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/style6"
                                android:text="@string/Cochon"
                                android:textColor="@color/style6"
                                android:textSize="@dimen/style6" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="bottom">

                        <ImageView
                            android:id="@+id/cochonImage"
                            android:layout_width="100dp"
                            android:layout_marginLeft="20dp"
                            android:onClick="onClick"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/pig_1" />

                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>


            <!-- Pommes -->
            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_of_gallery"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|bottom"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/style6"
                                android:text="@string/Licorne"
                                android:textColor="@color/style6"
                                android:textSize="@dimen/style6" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="bottom">

                        <ImageView
                            android:id="@+id/LicorneImage"
                            android:layout_width="100dp"
                            android:layout_marginLeft="20dp"
                            android:onClick="onClick"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/unicorn_1" />

                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>


        </TableRow>


    </TableLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="80dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/style6"
        android:fontFamily="@font/style6"
        android:textSize="@dimen/style6"
        android:gravity="center"
        android:text="@string/messageFoodieGallery" />

</LinearLayout>